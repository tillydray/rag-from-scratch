{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "rootDir": "./",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "lib": ["DOM", "ESNext"],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "preserveConstEnums": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
}
